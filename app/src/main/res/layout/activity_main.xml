<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context="com.nurettinkizilkaya.imagemusicapplication.MainActivity">


   <GridLayout
       android:id="@+id/gridLayout1"
       android:layout_width="match_parent"
       android:layout_height="450dp"
       android:layout_marginLeft="20dp">

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="0"
          android:layout_marginRight="5dp"
          android:layout_row="0"
          android:tag="1"
          app:srcCompat="@drawable/ag" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="1"
          android:layout_margin="0dp"
          android:layout_marginRight="5dp"
          android:layout_row="0"
          android:tag="2"
          app:srcCompat="@drawable/bm" />

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="2"
          android:layout_row="0"
          android:tag="3"
          app:srcCompat="@drawable/mb" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="0"
          android:layout_marginRight="5dp"
          android:layout_marginTop="10dp"
          android:layout_row="1"
          android:tag="4"
          app:srcCompat="@drawable/mg" />

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="1"
          android:layout_marginRight="5dp"
          android:layout_marginTop="10dp"
          android:layout_row="1"
          android:tag="5"
          app:srcCompat="@drawable/mj" />

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="2"
          android:layout_marginTop="10dp"
          android:layout_row="1"
          android:tag="6"
          app:srcCompat="@drawable/r" />

      <ImageView
          android:id="@+id/imageView7"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="0"
          android:layout_marginRight="5dp"
          android:layout_marginTop="10dp"
          android:layout_row="2"
          android:tag="7"
          app:srcCompat="@drawable/s" />

      <ImageView
          android:id="@+id/imageView8"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="1"
          android:layout_marginRight="5dp"

          android:layout_marginTop="10dp"
          android:layout_row="2"
          android:tag="8"
          app:srcCompat="@drawable/t" />

      <ImageView
          android:id="@+id/imageView9"
          android:layout_width="120dp"
          android:layout_height="150dp"
          android:layout_column="2"
          android:layout_marginTop="10dp"
          android:layout_row="2"
          android:tag="9"
          app:srcCompat="@drawable/ts" />

   </GridLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">

      <Button
          android:id="@+id/button1"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="130dp"

          android:layout_marginRight="130dp"
          android:layout_weight="1"
          android:text="Stop"
          android:textColor="@android:color/black" />

   </LinearLayout>

</LinearLayout>
